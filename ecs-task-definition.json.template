{
  "family": "safeimageapi-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "safeimageapi",
      "image": "${{ secrets.ECR_IMAGE_URI }}",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_DATASOURCE_URL",
          "value": "${{ secrets.SPRING_DATASOURCE_URL }}"
        },
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "value": "${{ secrets.SPRING_DATASOURCE_USERNAME }}"
        },
        {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "value": "${{ secrets.SPRING_DATASOURCE_PASSWORD }}"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "${{ secrets.AWS_ACCESS_KEY_ID }}"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "${{ secrets.AWS_SECRET_ACCESS_KEY }}"
        }
      ],
      "essential": true
    }
  ],
  "executionRoleArn": "${{ secrets.ECS_TASK_EXECUTION_ROLE_ARN }}"
}
